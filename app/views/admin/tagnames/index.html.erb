<div class="container">
  <div class="row mb">
    <div class="col-md-8">
      <h3>タグ一覧・追加ページ</h3>
    </div>
    <div class="col-md-4">
      <%= form_with model: @tag, url: admin_tagnames_path, method: :post, local: true do |f| %>
        <%= f.text_field :tag_name %>
        <%= f.submit "タグを作成", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.tag_name %></td>
            <td><%= link_to "編集", edit_admin_tagname_path(tag.id) %></td>
            <td><%= link_to "削除", admin_tagname_path(tag.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>



