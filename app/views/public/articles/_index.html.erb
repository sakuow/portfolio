<div class="row">
  <% articles.each do |article| %>

  <div class="col-3">
    <div class="ctn">
      <div class="form">
        <% article.images.each do |images| %>
          <div class="box", style="background-image: url(<%= attachment_url images, :file, :fill, 100, 100, format: 'jpeg' %>)"></div>
        <% end %>
      </div>
    </div>

    <div class="article">
      <%= link_to article_path(article.id) do %>
        <p>タイトル:<%= article.title %></p>
      <% end %>
      <details open>
        <summary>本文</summary>
        <p>:<%= article.body %></p>
      </details>

      <details open>
        <summary>タグ(こちらをクリック)</summary>
        <p>
          <% article.tagnames.each do |tag| %>
            ・<%= tag.tag_name %>
          <% end %>
        </p>
      </details>

      <p><%= article.created_at.strftime('%Y/%m/%d') %></p>
      <p>投稿者:<%= link_to article.user.name, user_path(article.user.id) %></p>
      <% if user_signed_in? %>
        <span id="favorites_<%= article.id %>">
          <%= render 'public/favorites/button', article: article %>
        </span>
        <p><%= link_to "#{article.comments.count}コメント", article_path(article.id) %></p>
      <% else %>
        いいね数:<%= article.favorites.count %><br />
        コメント数:<%= article.comments.count %>
      <% end %>
    </div>
  </div>

  <% end %>
</div>
<%= paginate articles %>
