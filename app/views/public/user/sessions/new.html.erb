<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2 class="index">ログイン画面</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-success rounded-pill" %>
        </div>
      <% end %>
      <p class="session-link">
        アカウントをお持ちでない方は
        <%= link_to "こちら", new_user_registration_path %>から作成してください。
      </p>

    </div>
  </div>
</div>

<style>
  .index {
    margin-bottom: 50px;
  }

  .session-link {
    margin: 50px 0;
    font-size: small;
  }
</style>