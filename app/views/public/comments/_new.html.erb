<p>コメント件数:<%= comments.count %></p>
<% comments.each do |comment| %>
  <p>
    <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
    <%= comment.user.name %> <%= comment.created_at.strftime('%Y/%m/%d') %>
  </p>
  <p>
    <%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to  "コメントを削除", article_comment_path(comment.article, comment), method: :delete, remote: true %>
    <% end %>
  </p>
<% end %>

<%= form_with model:[article, comment], url: article_comments_path(article.id) do |f| %>
  <%= f.text_area :comment, rows:'5', placeholder: "コメントをここに" %>
  <%= f.submit '送信する' %>
<% end %>
