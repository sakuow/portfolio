<p>コメント件数:<%= comments.count %></p>
<% comments.each do |comment| %>
<p>
  <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
  <%= comment.user.name %> <%= comment.created_at.strftime('%Y/%m/%d') %>
</p>
<p>
  <%= comment.comment %>
  <% if comment.user == current_user %>
    <%= link_to  "コメントを削除", article_comment_path(comment.article, comment), method: :delete %>
  <% end %>
</p>
<% end %>
